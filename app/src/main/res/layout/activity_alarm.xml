<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".sleepHome.Alarm">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:gravity="center"
        android:text="Set your Alarm"
        android:id="@+id/txt">

    </TextView>
    <TimePicker
        android:id="@+id/timePicker"
        android:layout_width="wrap_content"
        android:layout_below="@+id/txt"
        android:layout_marginTop="30dp"
        android:numbersBackgroundColor="#0C3150"
        android:layout_height="500dp"
        android:numbersSelectorColor="#0374BA"
        android:numbersTextColor="@color/white"
        android:layout_centerHorizontal="true"
        android:timePickerMode="clock" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_alignBottom="@+id/timePicker"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:layout_marginLeft="130dp"/>
    <Button
        android:id="@+id/buttonAlarm"
        android:layout_width="200dp"
        android:elevation="30dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView"
        android:layout_centerInParent="true"
        android:background="#0374BA"
        android:textColor="@color/white"
        android:layout_marginTop="10dp"
        android:text="Set Alarm" />


</RelativeLayout>