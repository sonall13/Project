<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1F3060"
    tools:context=".SelfCare.CalmCoCoon">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="10dp"
                android:id="@+id/back"
                android:layout_marginTop="15dp"
                android:background="@drawable/pre"/>

            <TextView
                android:id="@+id/categorytext"
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                android:textAlignment="center"
                android:text="ChilloutCove"
                android:textColor="@color/white"
                android:layout_marginHorizontal="30dp"
                android:textSize="25sp"
                />

            <TextView
                android:id="@+id/selfcareartical1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:layout_marginHorizontal="20dp"
                android:layout_below="@+id/categorytext"/>

            <TextView
                android:id="@+id/selfcareartical2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#5F71D5"
                android:textSize="15dp"
                android:layout_marginHorizontal="20dp"
                android:layout_below="@+id/selfcareartical1"/>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>