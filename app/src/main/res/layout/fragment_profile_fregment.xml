<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#0C1125"
    tools:context=".Bottumnavigation.ProfileFregment">


    <!-- Username -->
    <TextView
        android:id="@+id/settingtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Setting"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
    />

    <androidx.cardview.widget.CardView

        android:id="@+id/card"
        android:layout_width="400dp"
        android:layout_height="70dp"
        android:layout_below="@+id/settingtext"
        android:layout_marginLeft="5dp"
        android:backgroundTint="#091E3F"
        android:elevation="40dp"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="10dp"
        app:cardMaxElevation="20dp">

        <Button
            android:id="@+id/b1"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_below="@id/img"
            android:layout_marginLeft="310dp"
            android:layout_toRightOf="@+id/card"
            android:backgroundTint="#091E3F"
            android:text=">"
            android:textColor="@color/white"
            android:textSize="20dp"

            />

        <TextView
            android:layout_width="120dp"
            android:layout_height="70dp"
            android:id="@+id/settext"
            android:layout_marginStart="200dp"
            android:text=""/>

        <TextView
            android:id="@+id/changepass"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/img"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:text="Change Password"
            android:textColor="@color/white"
            android:textSize="15dp"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card2"
        android:layout_width="400dp"
        android:layout_height="70dp"
        android:layout_below="@+id/card"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:animationCache="true"
        android:background="@color/black"
        android:backgroundTint="#091E3F"
        android:elevation="40dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="10dp"
        app:cardMaxElevation="20dp">

        <Button
            android:id="@+id/b3"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_below="@id/card3"
            android:layout_marginHorizontal="280dp"
            android:layout_toRightOf="@+id/card"
            android:backgroundTint="#091E3F"
            android:text=">"
            android:textColor="@color/white"
            android:textSize="15dp"/>

        <TextView
            android:id="@+id/terms"
            android:layout_width="387dp"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:text="Turams and Conditions"
            android:textColor="@color/white"
            android:textSize="15dp" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card3"
        android:layout_width="400dp"
        android:layout_height="70dp"
        android:layout_below="@+id/card2"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:animationCache="true"
        android:background="@color/black"
        android:backgroundTint="#091E3F"
        android:elevation="40dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="10dp"
        app:cardMaxElevation="20dp">

        <Button
            android:id="@+id/b2"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_below="@id/card3"
            android:layout_marginHorizontal="280dp"
            android:layout_toRightOf="@+id/card"
            android:backgroundTint="#091E3F"
            android:text=">"
            android:textColor="@color/white"
            android:textSize="15dp"/>

        <TextView
            android:id="@+id/shareButton"
            android:layout_width="387dp"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:text="Share with Friend"
            android:textColor="@color/white"
            android:textSize="15dp" />
    </androidx.cardview.widget.CardView>





        <androidx.cardview.widget.CardView
        android:id="@+id/card4"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/card3"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:animationCache="true"
        android:background="@color/black"
        android:backgroundTint="#091E3F"
        android:elevation="40dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="10dp"
        app:cardMaxElevation="20dp">

        <Button
            android:id="@+id/fb"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_marginLeft="300dp"
            android:text="Submit"
            android:backgroundTint="#091E3F"
            android:textColor="@color/white"
            android:textSize="15dp"/>

        <EditText
            android:id="@+id/editTextFeedback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:hint="enter your feedback"
            android:textColorHint="@color/white"
            android:layout_marginTop="50dp"
            android:gravity="center_vertical"
            android:textColor="@color/white"
            android:textSize="15dp"/>
    </androidx.cardview.widget.CardView>

</RelativeLayout>