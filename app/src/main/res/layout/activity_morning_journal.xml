<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".JournalingActivity.MorningJournal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#FF0F1D44"
        android:alpha="0.9"
        android:layout_height="match_parent"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:alpha="0.7"
        android:background="@drawable/morning"
        android:layout_height="match_parent"/>
    <ImageButton
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="10dp"
        android:id="@+id/back"
        android:backgroundTint="@color/white"
        android:layout_marginTop="15dp"
        android:background="@drawable/pre"/>



    <Button
        android:layout_width="wrap_content"
        android:text="save"
        android:layout_marginTop="10dp"
        android:textColor="#000000"
        android:textSize="15dp"
        android:textStyle="bold"
        android:backgroundTint="#226A78"
        android:layout_alignParentRight="true"
        android:layout_height="wrap_content"
        android:id="@+id/savemornign"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="What would make today great?."
        android:textColor="@color/black"
        android:id="@+id/t1"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="100dp"
        android:textSize="20dp"
        />


    <EditText
        android:id="@+id/multianswer1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="10dp"
        android:text=""
        android:backgroundTint="#000000"
        android:textColor="@color/black"
        android:layout_below="@+id/t1" />

    <EditText

        android:id="@+id/multianswer2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="10dp"
        android:text=""
        android:textColor="@color/black"
        android:backgroundTint="#000000"
        android:layout_below="@+id/multianswer1" />

    <EditText

        android:id="@+id/multianswer3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text=""
        android:layout_marginHorizontal="10dp"
        android:textColor="@color/black"
        android:backgroundTint="#000000"
        android:layout_below="@+id/multianswer2" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="What is the one thing  that i must
accomplish today"
        android:textColor="@color/black"
        android:id="@+id/t2"
        android:layout_below="@+id/multianswer3"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:textSize="20dp"
        />
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginHorizontal="20dp"
        android:elevation="20dp"
        android:id="@+id/tf1"
        android:alpha="0.4"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="7dp"
        android:layout_below="@+id/t2"/>
        <EditText

            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text=""
            android:layout_marginHorizontal="20dp"
            android:textColorHint="@color/black"
            android:id="@+id/secondanswer"
            android:textColor="@color/black"
            android:hint="write here......"
            android:layout_marginTop="10dp"
            android:gravity="start"
            android:layout_below="@+id/t2"
            />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="i'm greatful for"
        android:textColor="@color/black"
        android:id="@+id/t3"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/tf1"
        android:layout_marginTop="50dp"
        android:textSize="20dp"
        />

        <EditText

            android:id="@+id/thirdanswer"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginHorizontal="20dp"
            android:text=""
            android:gravity="start"
            android:textAlignment="viewStart"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:hint="write here......"
            android:layout_below="@+id/t3">

        </EditText>
    <androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_marginHorizontal="20dp"
    android:elevation="20dp"
    android:alpha="0.3"
    android:foregroundGravity="top"
    app:cardCornerRadius="7dp"
    android:layout_below="@+id/t3"/>


</RelativeLayout>