<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0C3150"
    tools:context=".JournalingActivity.FreeStyle">
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#0D131B"
        android:alpha="0.9"
        android:layout_height="match_parent"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:alpha="0.4"
        android:background="@drawable/freestyle"/>


    <Button
        android:layout_width="wrap_content"
        android:text="save"
        android:layout_marginTop="10dp"
      android:backgroundTint="#293946"
        android:textColor="#E0EAF3"
        android:textSize="17dp"
        android:textStyle="bold"
        android:layout_alignParentRight="true"
        android:layout_height="wrap_content"
        android:id="@+id/savefreestyle"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="What's on your mind?"
        android:textSize="20dp"
        android:id="@+id/tt1"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="120dp"
        android:textColor="@color/white"
        />
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_marginHorizontal="20dp"
        android:elevation="20dp"
        android:alpha="0.2"
        android:id="@+id/tff11"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="17dp"
        android:backgroundTint="@color/black"
        android:layout_below="@+id/tt1"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:text=""
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="20dp"
            android:gravity="start"
            android:textColorHint="@color/white"
            android:id="@+id/freestyletext"
            android:hint="write here......"
            android:layout_below="@+id/tt1"
            android:textColor="@color/white" />


</RelativeLayout>