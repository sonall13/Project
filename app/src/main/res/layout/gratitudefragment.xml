<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#FF0F1D44"
    tools:context=".GetData.GratitudeFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#FF0F1D44"
        android:layout_height="match_parent"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Daily affirmation"
        android:textColor="@color/white"
        android:id="@+id/tt1"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="100dp"
        android:textSize="20dp"
        />
    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_marginLeft="20dp"
        android:layout_height="100dp"
        android:elevation="20dp"
        android:id="@+id/tff11"
        app:cardCornerRadius="15dp"
        android:layout_marginHorizontal="27dp"
        android:layout_below="@+id/tt1">
        <TextView
            android:layout_width="360dp"
            android:layout_height="100dp"
            android:text=""
            android:padding="10dp"
            android:id="@+id/firstanswer"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:hint="write here......"
            android:backgroundTint="#5690C3"
            android:layout_below="@+id/tt1"
            android:gravity="start"
            android:background="@color/white"
            />
    </androidx.cardview.widget.CardView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Today's heighlight."
        android:textColor="@color/white"
        android:id="@+id/t1"
        android:layout_below="@+id/tff11"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        />
    <TextView
        android:id="@+id/textb1"
        android:text="1"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/t1"
        android:textSize="18sp"
        android:clickable="false"
        android:filterTouchesWhenObscured="true"
        android:textColor="@color/white"
        android:layout_marginStart="20dp"
        android:padding="7dp"/>
    <TextView

        android:id="@+id/multianswer1"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:text=""
        android:padding="15dp"
        android:backgroundTint="#5690C3"
        android:textColor="@color/white"
        android:layout_toRightOf="@+id/textb1"
        android:layout_below="@+id/t1" />

    <TextView
        android:id="@+id/textb2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="2"
        android:textColor="@color/white"
        android:clickable="false"
        android:layout_marginStart="20dp"
        android:layout_below="@+id/textb1"
        android:padding="7dp"/>
    <TextView

        android:id="@+id/multianswer2"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:text=""
        android:padding="10dp"
        android:textColor="@color/white"
        android:layout_toRightOf="@+id/textb2"
        android:backgroundTint="#5690C3"
        android:layout_below="@+id/textb1" />

    <TextView
        android:id="@+id/textb3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="3"
        android:textColor="@color/white"
        android:clickable="false"
        android:layout_marginStart="20dp"
        android:layout_below="@+id/textb2"
        android:padding="7dp"/>
    <TextView

        android:id="@+id/multianswer3"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:text=""
        android:padding="10dp"
        android:textColor="@color/white"
        android:layout_toRightOf="@+id/textb3"
        android:backgroundTint="#5690C3"
        android:layout_below="@+id/textb2" />



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" What i'm greatful for today?"
        android:textColor="@color/white"
        android:id="@+id/t3"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/multianswer3"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        />
    <androidx.cardview.widget.CardView
        android:layout_width="360dp"
        android:layout_marginLeft="20dp"
        android:layout_height="100dp"
        android:elevation="20dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="17dp"
        android:layout_below="@+id/t3">
        <TextView
            android:id="@+id/thirdanswer"
            android:layout_width="360dp"
            android:layout_height="100dp"
            android:text=""
            android:textColor="@color/white"
            android:gravity="start"
            android:textColorHint="@color/white"
            android:hint="write here......"
            android:padding="10dp"
            android:backgroundTint="#5690C3"
            android:layout_below="@+id/t1"
            android:background="@color/white"/>
    </androidx.cardview.widget.CardView>


</RelativeLayout>