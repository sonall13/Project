<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".JournalingActivity.Gratitude">
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#FF0F1D44"
        android:layout_height="match_parent"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@drawable/gratitude"
        android:alpha="0.7"
        android:layout_height="match_parent"/>
    <ImageButton
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/back"
        android:layout_marginStart="10dp"
        android:backgroundTint="@color/white"
        android:layout_marginTop="30dp"
        android:background="@drawable/pre"/>

    <Button
        android:layout_width="100dp"
        android:text="save"
        android:layout_marginTop="20dp"
        android:backgroundTint="#122040"
        android:textColor="#5690C3"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_alignParentRight="true"
        android:layout_height="50dp"
        android:id="@+id/savegratitude"/>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="520dp"
        app:cardCornerRadius="30dp"
        android:layout_marginTop="150dp"
        android:layout_marginHorizontal="15dp"
        android:alpha="0.1"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Daily affirmation"
        android:textColor="@color/white"
        android:id="@+id/tt1"
        android:layout_below="@+id/savegratitude"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="90dp"
        android:textSize="20dp"
        />
    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_marginLeft="20dp"
        android:layout_height="100dp"
        android:elevation="20dp"
        android:id="@+id/tff11"
        app:cardCornerRadius="15dp"
        android:layout_marginHorizontal="27dp"
        android:layout_below="@+id/tt1">
        <EditText

            android:layout_width="360dp"
            android:layout_height="100dp"
            android:text=""
            android:id="@+id/firstanswer"
            android:hint="write here......"
            android:backgroundTint="#5690C3"
            android:layout_below="@+id/tt1"
            android:gravity="start"
            android:background="@color/white"/>
    </androidx.cardview.widget.CardView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Today's heighlight."
        android:textColor="@color/white"
        android:id="@+id/t1"
        android:layout_below="@+id/tff11"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        />
    <TextView
        android:id="@+id/textb1"
        android:text="1"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/t1"
        android:textSize="18sp"
        android:clickable="false"
        android:filterTouchesWhenObscured="true"
        android:textColor="@color/white"
        android:layout_marginStart="20dp"
        android:padding="7dp"/>
    <EditText

        android:id="@+id/multianswer1"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:text=""
        android:backgroundTint="#5690C3"
        android:textColor="@color/white"
        android:layout_toRightOf="@+id/textb1"
        android:layout_below="@+id/t1" />

    <TextView
        android:id="@+id/textb2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="2"
        android:textColor="@color/white"
        android:clickable="false"
        android:layout_marginStart="20dp"
        android:layout_below="@+id/textb1"
        android:padding="7dp"/>
    <EditText

        android:id="@+id/multianswer2"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:text=""
        android:textColor="@color/white"
        android:layout_toRightOf="@+id/textb2"
        android:backgroundTint="#5690C3"
        android:layout_below="@+id/textb1" />

    <TextView
        android:id="@+id/textb3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="3"
        android:textColor="@color/white"
        android:clickable="false"
        android:layout_marginStart="20dp"
        android:layout_below="@+id/textb2"
        android:padding="7dp"/>
    <EditText

        android:id="@+id/multianswer3"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:text=""
        android:textColor="@color/white"
        android:layout_toRightOf="@+id/textb3"
        android:backgroundTint="#5690C3"
        android:layout_below="@+id/textb2" />



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" What i'm greatful for today?"
        android:textColor="@color/white"
        android:id="@+id/t3"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/multianswer3"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        />
    <androidx.cardview.widget.CardView
        android:layout_width="360dp"
        android:layout_marginLeft="20dp"
        android:layout_height="100dp"
        android:elevation="20dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="17dp"
        android:layout_below="@+id/t3">
        <EditText
            android:id="@+id/thirdanswer"
            android:layout_width="360dp"
            android:layout_height="100dp"
            android:text=""
            android:gravity="start"
            android:hint="write here......"
            android:backgroundTint="#5690C3"
            android:layout_below="@+id/t1"
            android:background="@color/white"/>
    </androidx.cardview.widget.CardView>

</RelativeLayout>