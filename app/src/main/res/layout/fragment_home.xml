<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/hb2"
    tools:context=".Bottumnavigation.Home">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Horizontal Calendar View -->
            <devs.mulham.horizontalcalendar.HorizontalCalendarView
                android:id="@+id/calendarView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layerType="software"
                app:selectorColor="@color/white"
                app:textColorSelected="#FFFFFF"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Quote CardView -->
            <androidx.cardview.widget.CardView
                android:id="@+id/quote"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_marginHorizontal="20dp"
                app:cardCornerRadius="35dp"
                android:alpha="0.3"
                android:elevation="50dp"
                android:layout_marginTop="40dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/calendarView">

                <TextView
                    android:id="@+id/text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:lineSpacingExtra="7dp"
                    android:gravity="center"
                    android:text="`YOU CAN DO IT\nDON'T GIVE UP`"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textAlignment="center"
                    android:textSize="23dp" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/q1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="How was your day?"
                android:textSize="24dp"
                android:textAlignment="center"
                android:textColor="#B7FFFFFF"
                app:layout_constraintTop_toBottomOf="@id/quote"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"/>

            <androidx.cardview.widget.CardView
                android:alpha="0.3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="20dp"
                app:cardCornerRadius="35dp"
                android:elevation="50dp"
                android:background="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBaseline_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/q1">

               <ImageView
                   android:layout_width="match_parent"
                   android:layout_height="450dp"
                   android:background="@color/black"/>

            </androidx.cardview.widget.CardView>


            <!-- Happy ImageButton -->
                <ImageButton
                    android:id="@+id/happy"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginStart="90dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/happy"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/q1" />

                <!--            &lt;!&ndash; Happy TextView &ndash;&gt;-->
                <TextView
                    android:id="@+id/ht"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="85dp"
                    android:text="happy"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/happy" />

                <ImageButton
                    android:id="@+id/angry"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginStart="70dp"
                    android:background="@drawable/sad"
                    app:layout_constraintStart_toEndOf="@+id/happy"
                    app:layout_constraintTop_toTopOf="@+id/happy" />

                <TextView
                    android:id="@+id/at"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="70dp"
                    android:text="angry"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    app:layout_constraintStart_toEndOf="@+id/ht"
                    app:layout_constraintTop_toBottomOf="@+id/angry" />

                <ImageButton
                    android:id="@+id/crying"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginStart="70dp"
                    android:background="@drawable/crying"
                    app:layout_constraintStart_toEndOf="@+id/sick"
                    app:layout_constraintTop_toTopOf="@id/sick" />

            <TextView
                    android:id="@+id/ct"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="70dp"
                    android:text="crying"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    app:layout_constraintStart_toEndOf="@+id/st"
                    app:layout_constraintTop_toBottomOf="@+id/crying" />

                <ImageButton
                    android:id="@+id/sick"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginStart="90dp"
                    android:layout_marginTop="60dp"
                    android:background="@drawable/sick"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/happy" />

                <TextView
                    android:id="@+id/st"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="95dp"
                    android:text="sick"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/sick" />

                <ImageButton
                    android:id="@+id/grateful"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginStart="90dp"
                    android:layout_marginTop="60dp"
                    android:background="@drawable/grateful"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/sick" />

                <TextView
                    android:id="@+id/gt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="80dp"
                    android:text="grateful"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/grateful" />

                <ImageButton
                    android:id="@+id/stress"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginStart="70dp"
                    android:background="@drawable/stressed"
                    app:layout_constraintStart_toEndOf="@+id/grateful"
                    app:layout_constraintTop_toTopOf="@+id/grateful" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="50dp"
                    android:text="Stressed"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    app:layout_constraintStart_toEndOf="@+id/gt"
                    app:layout_constraintTop_toBottomOf="@+id/stress" />

                <ImageButton
                    android:id="@+id/good"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginStart="90dp"
                    android:layout_marginTop="60dp"
                    android:background="@drawable/good"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/grateful" />

                <TextView
                    android:id="@+id/goodt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="90dp"
                    android:text="good"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/good" />

                <ImageButton
                    android:id="@+id/notgreat"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginStart="70dp"
                    android:background="@drawable/notgreat"
                    app:layout_constraintStart_toEndOf="@+id/good"
                    app:layout_constraintTop_toTopOf="@+id/good" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="60dp"
                    android:text="not great"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    app:layout_constraintStart_toEndOf="@+id/goodt"
                    app:layout_constraintTop_toTopOf="@+id/goodt" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>

</FrameLayout>
