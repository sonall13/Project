<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0C3150"
    tools:context=".sleepHome.SleepGoal">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="Set Your Goal now"
        android:textSize="25dp"
        android:id="@+id/txt"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        />
    <TimePicker
        android:id="@+id/datePicker1"
        android:layout_marginTop="200dp"
        android:layout_width="wrap_content"
        android:layout_centerInParent="true"
        android:layout_below="@+id/txt"
        android:numbersInnerTextColor="@color/white"
        android:layout_height="wrap_content"
        android:timePickerMode="spinner"/>

    <Button
        android:id="@+id/setgoal"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/datePicker1"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:background="#0374BA"
        android:elevation="30dp"
        android:text="Set Goal "
        android:textColor="@color/white" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="Most people need 7 to 9 hour of sleep
to feel rested"
        android:textSize="15dp"
        android:layout_below="@+id/setgoal"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        />
</RelativeLayout>

