<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#6D7DD5"
    android:layout_height="match_parent"
    tools:context=".JournalingActivity.Memories">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:id="@+id/memory"
        android:textSize="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:textStyle="italic|bold"
        android:text="Add your memory"/>

    <Button
        android:id="@+id/savememory"
        android:layout_width="wrap_content"
        android:text="save"
        android:textColor="@color/black"
        android:background="#E6DACC"
        android:layout_alignParentRight="true"
        android:layout_height="50dp"/>

    <ImageView
        android:layout_width="match_parent"
        android:elevation="20dp"
        android:layout_marginHorizontal="10dp"
        android:layout_below="@+id/memory"
        android:layout_centerInParent="true"
        android:id="@+id/i1"
        android:alpha="0.7"
        android:layout_marginTop="20dp"
        android:background="@drawable/sleep"
        android:layout_height="400dp"/>

    <ImageView
        android:id="@+id/i2"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_below="@+id/memory"
        android:layout_centerInParent="true"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="20dp"
        android:elevation="20dp" />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:hint="write your caption......."
        android:textColorHint="#191818"
        android:gravity="start"
        android:id="@+id/textarea"
        android:visibility="gone"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="20dp"
        android:layout_below="@+id/i1"
        />
</RelativeLayout>