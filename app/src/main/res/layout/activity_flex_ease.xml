<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF0C1125"
    tools:context=".StretchingActivity.FlexEase">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
            android:text="mukha_sukhasana"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:background="#181E37"

            android:gravity="center"
        />

    <ImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginVertical="100dp"
        android:layout_marginHorizontal="40dp"
        android:id="@+id/imagg1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imagg1"
            android:textColor="@color/white"
            android:id="@+id/t1"
            android:layout_marginHorizontal="20dp"
            android:text="Sit Comfortably: Start by sitting on the floor or on a yoga mat with your legs crossed. If sitting on the floor is uncomfortable, you can sit on a folded
  blanket or a yoga block to elevate your hips."/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/t1"
            android:textColor="@color/white"
            android:layout_marginTop="20dp"
            android:id="@+id/t2"
            android:layout_marginHorizontal="20dp"
            android:text="Cross Your Legs: Place one foot in front of the other and cross your legs at the shins. Your knees should be wide apart, and each foot should be under the opposite knee."/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/t2"
            android:id="@+id/t3"
            android:textColor="@color/white"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="20dp"
            android:text="Alignment: Sit up tall with your spine straight. Imagine a string pulling you up from the crown of your head. Engage your core muscles slightly to support your lower back."/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/t3"
            android:id="@+id/t4"
            android:textColor="@color/white"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="20dp"
            android:text="Relax Your Shoulders: Roll your shoulders back and down, away from your ears. This helps to open up the chest and improve your posture.

Hand Position: Rest your hands on your knees or thighs with your palms facing down or up. You can also bring your hands into a mudra (yogic hand gesture) such as Chin Mudra (index finger and thumb touching)"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/t4"
            android:id="@+id/t5"
            android:textColor="@color/white"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="20dp"
            android:text="Breathe Deeply: Take slow, deep breaths in and out through your nose. Feel the breath moving in and out of your body, and allow it to help you relax deeper into the pose."
/>

    </RelativeLayout>

</ScrollView>