<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#181e37"
    tools:context=".YogaActivity.YogaEssence">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="YogaEssence"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:background="#181E37"
            android:gravity="center"
            />

        <ImageView
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_marginVertical="70dp"
            android:layout_marginHorizontal="40dp"
            android:id="@+id/imagg1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imagg1"
            android:textColor="@color/white"
            android:id="@+id/t1"
            android:layout_marginHorizontal="20dp"
            android:text="Start on your hands and knees in a tabletop position, with your wrists directly under your shoulders and your knees under your hips.
Engage your core muscles and keep your spine neutral.
Extend your right leg straight back behind you, toes pointing down to the floor.
Simultaneously, lift your left arm straight forward, reaching it out in front of you.
Keep your hips level and parallel to the ground, avoiding any twisting or tilting."/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/t1"
            android:textColor="@color/white"
            android:layout_marginTop="20dp"
            android:id="@+id/t2"
            android:layout_marginHorizontal="20dp"
            android:text="Find your balance by focusing on a point on the floor or at eye level.
Hold the pose for a few breaths, maintaining stability and alignment.
Keep your neck in line with your spine, avoiding any strain or tension.
Exhale as you release back to the starting tabletop position.
Repeat on the opposite side, extending the left leg back and the right arm forward.
Aim for balance and symmetry between both sides of the body."/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/t2"
            android:id="@+id/t3"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="20dp"
            android:text="Benefits:"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/t3"
            android:id="@+id/t4"
            android:textColor="@color/white"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="20dp"
            android:text="Strengthens the core muscles, including the abdomen and lower back.
Improves balance, stability, and coordination.
Stretches and lengthens the spine, promoting flexibility.
Engages the muscles of the arms, shoulders, and legs.
Enhances focus, concentration, and mindfulness."/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/t4"
            android:textSize="20dp"
            android:id="@+id/t5"
            android:textColor="@color/white"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="20dp"
            android:text="Contraindications:"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/t5"
            android:id="@+id/t6"
            android:textColor="@color/white"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="20dp"
            android:text="Avoid if you have wrist, shoulder, or knee injuries.
Use caution if you have high blood pressure or vertigo.
If you experience any discomfort or pain, gently come out of the pose and modify as needed."/>


    </RelativeLayout>


</ScrollView>